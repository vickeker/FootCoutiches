<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/choix"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/Sp_choix"
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:drawSelectorOnTop="true" />

        <Button
            android:id="@+id/B_choix"
            android:layout_width="50dip"
            android:layout_height="40dip"
            android:text="Ok"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Layout_arch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/Layout_choix"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TV_type"
                android:layout_width="250dip"
                android:layout_height="40dip"
                android:gravity="center"
                android:textColor="#ff8259"
                android:textStyle="bold" />

            <Button
                android:id="@+id/B_cacherarchive"
                android:layout_width="25dip"
                android:layout_height="20dip"
                android:layout_gravity="center"
                android:background="@drawable/cacher" />
        </LinearLayout>

        <ListView
            android:id="@+id/LV_boissonarchive"
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:layout_below="@id/Layout_choix" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/titre"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:gravity="center"
            android:text="Action"
            android:textColor="#ff8259"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:gravity="center"
            android:text="Date"
            android:textColor="#ff8259"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_archive"
        android:layout_width="match_parent"
        android:layout_height="260dip"
        android:orientation="vertical" >
            
    <ListView
        android:id="@+id/LV_datearchive"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
</LinearLayout>